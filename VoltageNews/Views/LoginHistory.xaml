<Page x:Class="VoltageNews.Views.LoginHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VoltageNews.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginHistory" Background="Transparent">
    <Grid>
        <DataGrid Name="mainDGRID" CanUserAddRows="False" IsReadOnly="True" Background="Transparent" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID пользователя" Binding="{Binding UserId}"/>
                <DataGridTextColumn Header="Логин пользователя" Binding="{Binding UserEmail}"/>
                <DataGridTextColumn Header="Дата входа" Binding="{Binding LoginDate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
